{
    "name": "mindy-tasks",
    "main": "./.webpack/main/bundle.js",
    "version": "0.1.0",
    "description": "An Electron app to manage tasks.",
    "private": true,
    "scripts": {
        "postinstall": "electron-builder install-app-deps",
        "build": "webpack --config webpack.config.prod.js",
        "build:dev": "webpack --config webpack.config.dev.js",
        "package": "npm run build && electron-builder --dir .",
        "start": "concurrently \"npm run start:dev\" \"npm run start:electron\"",
        "start:dev": "webpack serve --config webpack.config.dev.js",
        "start:electron": "npm run build:dev && electron ./.webpack/main/bundle.js"
    },
    "author": "JChidem (Jean Chidem)",
    "license": "ISC",
    "dependencies": {
        "@hot-loader/react-dom": "^16.13.0",
        "@radix-ui/colors": "^0.1.8",
        "@radix-ui/react-context-menu": "^0.1.6",
        "@radix-ui/react-icons": "^1.1.1",
        "@radix-ui/react-radio-group": "^0.1.5",
        "@stitches/react": "^1.2.8",
        "mongodb": "^4.7.0",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hot-loader": "^4.12.20",
        "reflect-metadata": "^0.1.13",
        "sqlite3": "5.0.0",
        "ts-node": "^10.8.2",
        "typeorm": "^0.2.24"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/preset-react": "^7.9.4",
        "@babel/preset-typescript": "^7.9.0",
        "@types/html-webpack-plugin": "^3.2.2",
        "@types/node": "^13.13.52",
        "@types/react": "^16.9.31",
        "@types/react-dom": "^16.9.6",
        "babel-loader": "^8.1.0",
        "concurrently": "^5.1.0",
        "css-loader": "^3.4.2",
        "electron": "^8.2.0",
        "electron-builder": "^22.4.1",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^5.5.0",
        "prettier": "^2.0.2",
        "sass-loader": "^8.0.2",
        "source-map-loader": "^0.2.4",
        "style-loader": "^1.1.3",
        "ts-loader": "^9.3.1",
        "typescript": "^4.7.4",
        "url-loader": "^4.0.0",
        "webpack": "^5.73.0",
        "webpack-cli": "^4.10.0",
        "webpack-dev-server": "^3.10.3"
    }
}
